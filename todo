require "pry"
require "./db/setup"
require "./lib/all"
require 'date'
require 'colorize'


def search user, str
  tasks = user.tasks.where("description like '%#{str}%'")
  print "Id  ". ljust(25) + "Task  ".ljust(25) + "Due Date  ".ljust(25) + "Completed?".ljust(25)
  tasks.each do |task|
    task.display_item 
  end
end

###############################

puts "Running TaskMaster 2000"
user = User.find_by_login ARGV.shift
command = ARGV.shift
case command
when "add"
  task_list = ARGV.shift
  task = ARGV.shift
  current_user.add_task task_list, task
when "due"
  n = ARGV.shift
  due_date = ARGV.shift
  task =Task.find(n)
  task.add_due_date due_date
when "done"
  task = ARGV.shift
  task.mark_complete!
when "list"
  name = ARGV.shift
  if name = ""
    current_user.list_tasks 'nil'
  else
    current_user.list_tasks name
  end
when "next"
  task =current_user.tasks.random
  task.display_item
when "search"
  str = ARGV.shift
  search current_user, str
else
  puts "Invalid Command"
end







